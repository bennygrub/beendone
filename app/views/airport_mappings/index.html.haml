%h1 Listing airport_mappings

%table
  %tr
    %th Name
    %th City
    %th Airport
    %th Airline
    %th Message
    %th Note
    %th
    %th
    %th

  - @airport_mappings.each do |airport_mapping|
    %tr
      %td= airport_mapping.name
      %td= airport_mapping.city
      %td= airport_mapping.airport_id
      %td= airport_mapping.airline_id
      %td= airport_mapping.message_id
      %td= airport_mapping.note
      %td= link_to 'Show', airport_mapping
      %td= link_to 'Edit', edit_airport_mapping_path(airport_mapping)
      %td= link_to 'Destroy', airport_mapping, :method => :delete, :data => { :confirm => 'Are you sure?' }

