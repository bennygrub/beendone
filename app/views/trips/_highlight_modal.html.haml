#highlightModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-header
		%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
		%h3#coverModalLabel Add a Trip Memory/Highlight
	.modal-body
		= nested_form_for @trip do |f|
			- if @trip.errors.any?
				#error_explanation
					%h2= "#{pluralize(@trip.errors.count, "error")} prohibited this highlight from being saved:"
					%ul
						- @trip.errors.full_messages.each do |msg|
							%li= msg
			=f.fields_for :highlights do |t|	
				=t.hidden_field :user_id, value: current_user.id
				.field
					= t.label :category_id
					= t.number_field :category_id
				.field
					= t.label :name
					= t.text_field :name
				.field
					= t.label :description
					= t.text_area :description
			%button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Cancel
			%button
				= f.submit 'Add Highlight'